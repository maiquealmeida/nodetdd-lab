{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {},
  "plugins": ["html"],
  "settings": {
    "html/xml-extensions": [".html", ".njk"],
    "html/report-bad-indent": "error"
  }
}
